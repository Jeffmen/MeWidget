<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->  
        <item name="colorPrimary">@android:color/transparent</item>  
        <!-- 状态栏颜色 -->  
        <item name="colorPrimaryDark">@color/transparent_dark_gray</item>  
        <!-- 窗口的背景颜色 -->  
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 底部导航栏颜色 -->  
        <item name="android:navigationBarColor">@android:color/transparent</item> 
        <item name="toolbarStyle">@style/ClubToolbar</item>
    </style>

	<style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">  
	        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->  
	</style>
	
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="TextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:text">@string/null_text</item>
        <item name="android:singleLine">true</item>	
        <item name="android:textColor">@color/widget_text_white_color</item>
    </style>
    
    <style name="ShadowStyle">
        <item name="android:shadowColor">#990000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">8</item>
    </style>
    
    <style name="Weather.Widget.ProgressBar" parent="@android:style/Widget.Holo.ProgressBar">
         <item name="android:indeterminateDrawable">@drawable/rotate_sun</item>
    </style>
    
</resources>
