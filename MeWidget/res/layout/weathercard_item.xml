<?xml version="1.0" encoding="utf-8"?>
<com.example.mewidget.view.AbsoluteView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false" >
        <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="11"
		    android:orientation="vertical" >
		    <FrameLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent">
		        <LinearLayout
			        android:layout_width="match_parent"
					android:orientation="vertical"
			        android:layout_height="match_parent"
			        android:gravity="left"
			        android:weightSum="3" >
				    <ImageView
				        android:id="@+id/is_location"
				        android:layout_width="wrap_content"
				        android:layout_height="0dp"
				        android:layout_weight="1"
				        android:layout_marginLeft="20dp"
				        android:scaleType="centerInside"
				        android:src="@drawable/ic_location_on_white_24dp">
			        </ImageView>
		        </LinearLayout>	
		        <LinearLayout
			        android:layout_width="match_parent"
					android:orientation="vertical"
			        android:layout_height="match_parent"
			        android:weightSum="3" >
		            <TextView
	                    android:id="@+id/city_name"
			            android:gravity="center" 
			            android:layout_gravity="center_horizontal"
				        android:layout_width="wrap_content"
				        android:layout_height="0dp"
				        android:layout_weight="1"
				        android:alpha="0.7"
		                android:text="@string/null_text"
			            android:singleLine="true"
			            android:textColor="@color/widget_text_white_color"
			            android:textStyle="bold"
			            android:textSize="20sp">
		            </TextView>
		        </LinearLayout>	
			    <LinearLayout
			        android:id="@+id/weatherLinear1"
				    android:layout_gravity="center|top"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="@dimen/animated_weathericon_margin_top"
					android:layoutAnimation="@anim/weather_rotate"
					android:visibility="invisible"
				    android:orientation="vertical" >
				    <ImageView
				        android:id="@+id/weatherIcon1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"
				        android:scaleType="centerInside">
			        </ImageView>
			    </LinearLayout>
			    <LinearLayout
			        android:id="@+id/weatherLinear2"
				    android:layout_gravity="center|top"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="@dimen/animated_weathericon_margin_top"
					android:visibility="invisible"
				    android:orientation="vertical" >
				    <ImageView
				        android:id="@+id/weatherIcon2"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"
				        android:scaleType="centerInside">
			        </ImageView>
			    </LinearLayout>
		    </FrameLayout>
		</LinearLayout>
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
			android:layout_weight="9"
			android:orientation="vertical"
			android:weightSum="3" >
	        <LinearLayout
		        android:layout_height="90dp"
		        android:layout_width="match_parent"
				android:layout_weight="1"
				android:orientation="vertical">	     
	            <TextView
                    android:id="@+id/txt_temperature"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
		            android:gravity="center" 
				    android:alpha="0.7"
		            android:layout_gravity="center_horizontal"
		            android:textColor="@color/widget_text_white_color"
		            android:textStyle="bold"
		            android:textSize="27sp">
	            </TextView>
		    </LinearLayout>
	        <LinearLayout
		        android:layout_height="50dp"
		        android:layout_width="match_parent"
				android:layout_weight="1"
				android:orientation="vertical">
				<com.example.mewidget.view.AutofitTextView
                    android:id="@+id/txt_weather"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
		            android:gravity="center_horizontal" 
		            android:layout_gravity="center_horizontal"
		            android:textStyle="bold"
		            android:maxLines="2"
		            android:textSize="20sp">
	            </com.example.mewidget.view.AutofitTextView>
		    </LinearLayout>
	        <LinearLayout
	            android:id="@+id/weather_info_layout"
		        android:layout_height="90dp"
		        android:layout_width="match_parent"
				android:layout_weight="1"
				android:orientation="vertical"
				android:weightSum="3">
		        <LinearLayout
			        android:layout_width="match_parent"
					android:orientation="horizontal"
		            android:gravity="center" 
		            android:layout_gravity="center_horizontal"
			        android:layout_height="0dp"
			        android:layout_weight="1">
		            <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
		                android:gravity="center" 
		                android:layout_gravity="center_horizontal"
		                android:text="@string/wind_text"
			            android:textStyle="bold"
		                android:textSize="15sp">
		            </TextView>
		           	<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
		                android:gravity="center" 
		                android:layout_gravity="center_horizontal"
	                    android:id="@+id/txt_wind_speed"
		                android:text="@string/null_text"
			            android:textStyle="bold"
		                android:textSize="15sp">
		            </TextView>
		        </LinearLayout>	        
		        <LinearLayout
			        android:layout_width="match_parent"
					android:orientation="horizontal"
			        android:layout_height="0dp"
		            android:gravity="center_horizontal" 
		            android:layout_gravity="center_horizontal"
			        android:layout_weight="1">
		            <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
		                android:gravity="center" 
		                android:layout_gravity="center_horizontal"
		                android:text="@string/humidity_text"
			            android:textStyle="bold"
		                android:textSize="15sp">
		            </TextView>
		            <TextView
	                    android:id="@+id/txt_humidity"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
		                android:gravity="center" 
		                android:layout_gravity="center_horizontal"
		                android:text="@string/null_text"
			            android:textStyle="bold"
		                android:textSize="15sp">
		            </TextView>
		        </LinearLayout>
		    </LinearLayout>
        </LinearLayout>
</com.example.mewidget.view.AbsoluteView>
